{
  "name": "claudelang",
  "displayName": "ClaudeLang",
  "description": "Language support for ClaudeLang",
  "version": "0.1.0",
  "publisher": "claudelang",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": ["Programming Languages"],
  "activationEvents": [
    "onLanguage:claudelang"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [{
      "id": "claudelang",
      "aliases": ["ClaudeLang", "claudelang"],
      "extensions": [".cl", ".claudelang"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "claudelang",
      "scopeName": "source.claudelang",
      "path": "./syntaxes/claudelang.tmLanguage.json"
    }],
    "configuration": {
      "type": "object",
      "title": "ClaudeLang",
      "properties": {
        "claudelang.lspServerPath": {
          "type": "string",
          "default": "claudelang-lsp",
          "description": "Path to the ClaudeLang LSP server executable"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "vscode-languageclient": "^8.0.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "^18.0.0",
    "typescript": "^4.9.0"
  }
}